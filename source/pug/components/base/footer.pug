mixin footer(footerMods)
  footer.footer(class=footerMods)
    if (contactsNeeded)
      +contacts()
    .container.footer__container.animation-group(data-animate, data-animate-threshold="1.1", data-animate-duration="1.1", data-animate-delay="0.2")
      +title(footerTitleParameters).fir
      p.footer__copyright.fir &copy;&nbsp;2019&ndash;2024 ООО&nbsp;&laquo;НЭО&nbsp;ДИСК&raquo;
      p.footer__city.fir г. Москва
      p.footer__design.fir дизайн:&nbsp;
        +link(footerFirstLinkProps)
