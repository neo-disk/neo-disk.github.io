  const footerTitleParameters = {
    lvl: 2,
    text: "О разработчиках сайта",
    classes: "visually-hidden",
    isTitleNeed: true
  };

-
  const footerFirstLinkProps = {
    href: "https://weeee.ru/",
    text: "weeee.ru",
    target: "_blank",
    rel: "nofollow noopener"
  }

-
  const footerSecondLinkProps = {
